{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run Application",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000",
                "--debugger",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run app.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "development",
                "SECRET_KEY": "dev-secret-key"
            }
        },
        {
            "name": "Python: Test Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_local.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
